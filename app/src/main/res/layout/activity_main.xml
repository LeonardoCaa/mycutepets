<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
android:layout_height="match_parent"
android:layout_width="match_parent"
tools:context=".MainActivity">

<ImageView
    android:id="@+id/imgLogo"
    android:layout_centerHorizontal="true"
    android:layout_height="150dp"
    android:layout_margin="30dp"
    android:layout_width="150dp"
    android:scaleType="centerCrop"
    android:src="@drawable/logo" />

<EditText
    android:drawableEnd="@drawable/sharp_person"
    android:hint="Insira o nome do usuário"
    android:id="@+id/edtUsuario"
    android:inputType="textPersonName"
    android:layout_below="@+id/imgLogo"
    android:layout_height="wrap_content"
    android:layout_margin="20sp"
    android:layout_width="match_parent"
    android:padding="10sp" />

<EditText
    android:drawableEnd="@drawable/outline_lock"
    android:hint="Insira a senha do Usuário"
    android:id="@+id/edtSenha"
    android:inputType="textPassword"
    android:layout_below="@+id/edtUsuario"
    android:layout_height="wrap_content"
    android:layout_margin="20sp"
    android:layout_width="match_parent"
    android:padding="10sp" />

<Button
    android:id="@+id/btnEntrar"
    android:layout_below="@+id/edtSenha"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:layout_width="wrap_content"
    android:text="Entrar" />

<Button
    android:id="@+id/btnSair"
    android:layout_below="@+id/edtSenha"
    android:layout_height="wrap_content"
    android:layout_marginLeft="160sp"
    android:layout_marginTop="20sp"
    android:layout_toRightOf="@+id/btnEntrar"
    android:layout_width="wrap_content"
    android:text="Sair" />

</RelativeLayout>
</ScrollView>